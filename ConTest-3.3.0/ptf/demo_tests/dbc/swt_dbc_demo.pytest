from ptf.ptf_utils.report import DETAILS, VERIFIES, TESTTAG, TESTSTEP, EXPECTED, TESTCASE
from ptf.ptf_utils.global_params import get_parameter
from contest_verify.verify import contest_asserts


def SWT_DBC_1_DEMO_TEST_PASSv1():
    DETAILS("This is an example test case for checking DBC APIs")
    VERIFIES("SAMPLE_CASE_DB1")
    TESTTAG("HIL")

    TESTSTEP("Get value for signal constant value from DBC and checking")
    EXPECTED("Value same expected")
    TESTCASE()

    db_app = get_parameter("db")
    contest_asserts.verify(8, db_app.get_constant_value('VehicleSystem3.Grader'),
                       "VehicleSystem3.Grader value not match with dbc")


