from ptf.ptf_utils.global_params import get_parameter
from ptf.ptf_utils.report import DETAILS, PRECONDITION, VERIFIES, TESTTAG, TESTSTEP, EXPECTED, TESTCASE


def SWT_SAMPLE_USB_HUB_3P_TESTv1():
    DETAILS("Sample test for usb utility")
    DETAILS("This test case is written for USB HUB 3P")

    PRECONDITION("Fill in precondition")

    VERIFIES("L3_SW_CHECK_USB_HUB")

    TESTTAG("hil")

    TESTCASE()

    TESTSTEP("Grabbing usb hub utility object via global variable")
    EXPECTED("Object grabbed successfully")
    usb_hub = get_parameter("usb_hub")

    TESTSTEP("Enable port 2")
    EXPECTED("Port enabled successful")
    usb_hub.enable(2)

    TESTSTEP("Disable port 2")
    EXPECTED("Port disabled successful")
    usb_hub.disable(2)

    TESTSTEP("Disable all ports")
    EXPECTED("Ports disabled successful")
    usb_hub.disable_all()
