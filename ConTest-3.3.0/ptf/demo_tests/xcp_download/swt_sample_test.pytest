from ptf.ptf_utils.report import *
from ptf.ptf_utils.global_params import get_parameter


def SWT_XCP_FLASHING_TESTv1():
    # getting XCP object created in setup.pytest
    DETAILS("Flashing RVS over UDS using XCP-Download tool")
    PRECONDITION("CANoe is connected with ECU and simulation ON. Please stop simulation")
    TESTCASE()
    TESTTAG("HIL")
    VERIFIES("FlashOverCAN_RVS231")
    TESTSTEP("Flashing over CAN")
    xcp = get_parameter("xcp_download")
    # Flashing step
    xcp.xcp_download("D:\\tools\\XCP\\Projects",
                     "rvs",
                     "D:\\tools\\XCP\\Projects\\rvs\\rvs231_mlc40_0_conti_app-cfgdata.mot"
                     )
