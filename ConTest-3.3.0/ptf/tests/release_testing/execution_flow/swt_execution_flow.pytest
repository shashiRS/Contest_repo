def SWT_NORMAL_TEST_PASSv1():
    print(f"TEST: Executing {SWT_NORMAL_TEST_PASSv1.__name__}")


def SWT_NORMAL_TEST_FAILv1():
    print(f"TEST: Executing {SWT_NORMAL_TEST_FAILv1.__name__}")
    contest_asserts.fail(f"TEST: Forced failure from {SWT_NORMAL_TEST_FAILv1.__name__}")


@skip_if(1 == 1, reason="TEST: skipped SWT_SKIPv1 as 1 == 1")
